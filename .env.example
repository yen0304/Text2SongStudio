# Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# Backend Configuration
# =============================================================================

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/text2song

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage

# S3 Configuration (if STORAGE_TYPE=s3)
# S3_BUCKET=text2song-audio
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_REGION=us-east-1

# Model Configuration
MODEL_CACHE_DIR=./model_cache
DEFAULT_MODEL=facebook/musicgen-small

# Generation Settings
MAX_DURATION_SECONDS=30
DEFAULT_DURATION_SECONDS=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# =============================================================================
# Frontend Configuration
# =============================================================================

NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# Training Configuration
# =============================================================================

# Training output directory
TRAINING_OUTPUT_DIR=./training_output

# Weights & Biases (optional)
# WANDB_API_KEY=your-api-key
# WANDB_PROJECT=text2song-studio

# =============================================================================
# Development Settings
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable hot reload
HOT_RELOAD=true
